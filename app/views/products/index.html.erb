<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Price</th>
      <th>Old price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.image, height: 20) if product.image %></td>
        <td><%= link_to product.name, 'http://www.goruck.com' + product.link %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= number_to_currency(product.old_price) %></td>
        <%#= link_to 'Show', product %>
        <%#= link_to 'Edit', edit_product_path(product) %>
        <%#= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>
